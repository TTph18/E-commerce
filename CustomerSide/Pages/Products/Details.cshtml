@page
@model CustomerSide.Pages.Products.DetailsModel
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/form.css" rel="stylesheet" type="text/css" media="all" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" media="all" />

</head>
<body>
    <div class="single-sec">
        <div class="container">
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li class="active">Products</li>
            </ol>
            <!-- start content -->
            <div class="col-md-9 det">
                <div class="single_left">
                    <img style="width: 100%" src="@(Configuration["BaseAddress"]+ "/image/" + Model.Product.PictureUrl)" />
                </div>
                <div class="single-right">
                    <h3>@Html.DisplayFor(model => model.Product.Name)</h3>
                    <div class="id"><h4>ID: SB2379</h4></div>
                    <form action="" class="sky-form">
                        <fieldset>
                            <section>
                                <div class="rating">
                                    @for (var i = 1; i <= Model.Product.Rate; i++)
                                    {
                                        <span class="starGlowN"></span>
                                    }
                                    @for (var i = (Model.Product.Rate + 1); i <= 5; i++)
                                    {
                                        <span class="starFadeN"></span>
                                    }
                                    <div class="clearfix"></div>
                                </div>
                            </section>
                        </fieldset>
                    </form>
                    <div class="cost">
                        <div class="prdt-cost">
                            <ul>
                                <li>Sellling Price:</li>
                                <li class="active">$@Html.DisplayFor(model => model.Product.Price)</li>
                                <a href="#">BUY NOW</a>
                            </ul>
                        </div>
                        <div class="check">
                            <p><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span>Enter pin code for delivery & availability</p>
                            <form class="navbar-form navbar-left" role="search">
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="Enter Pin code">
                                </div>
                                <button type="submit" class="btn btn-default">Verify</button>
                            </form>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    @*<div class="item-list">
                <ul>
                    <li>Plant family: @Html.DisplayNameFor(model => model.Cate)</li>
                </ul>
            </div>*@
                    <div class="single-bottom1">
                        <h6>Details</h6>
                        <p class="prod-desc">@Html.DisplayFor(model => model.Product.Description)</p>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="sofaset-info">
                    <h4>Product reviews</h4>
                    <div id="RatingBox">@await Component.InvokeAsync("Rating", new { id = Model.Product.Id })</div>
                </div>
                <div class="product-table">
                    <h3>Write Review</h3>
                    <form method="post">
                        <div class="form-group">
                            <label for="Rating" class="control-label">Rating</label>
                            <input type="number" class="form-control" name="Rating">
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-default" id="submitButton">
                        </div>
                    </form>
                </div>
                <div class="clearfix"></div>
                <!---->
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</body>
</html>
